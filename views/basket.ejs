<%- include('particles/header.ejs') %>
<body>
  
   
   <div class="dark-light">
       <svg viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z" /></svg>
      </div>
   <div class="app">
    <%- include('particles/navigation.ejs') %>
    <div class="wrapper">
    
     <div class="main-container">
      
      <div class="content-wrapper">
      
       <div class="content-section">
       
        <% for (let i=0; i < basket.length; i++) { %>
        <ul>
          <a href="/basket_items/<%=basket[i].id %>">     
         <li class="adobe-product">
          <div class="products">
           
            <%= basket[i].title %>
          </div>
   
          <span class="status">
           <span class="status-circle"></span>
           <%=basket[i].price%>&nbsp;₽   </span>
          <div class="button-wrapper">

            <form action="/del" method="post">
              <input type="submit" class="del_button_item" value="Удалить">
              <input value="<%= basket[i].id%>" type="hidden" name="id">
            </form>
            
           <div class="pop-up">
            
            <div class="pop-up__subtitle">Adjust your selections for advanced options as desired before continuing. <a href="#">Learn more</a></div>
            <div class="checkbox-wrapper">
             <input type="checkbox" id="check1" class="checkbox">
             <label for="check1">Import previous settings and preferences</label>
            </div>
            <div class="checkbox-wrapper">
             <input type="checkbox" id="check2" class="checkbox">
             <label for="check2">Remove old versions</label>
            </div>
            <div class="content-button-wrapper">
             <button class="content-button status-button open close">Cancel</button>
             <button class="content-button status-button">Continue</button>
            </div>
           </div>
           <div class="menu">
          
         </li>
         
        </ul>
      </a>  
        <% } %>
       </div>
       <div class="content-section">
        
        </div>
       </div>
      </div>
     </div>
    </div>
    <div class="overlay-app"></div>
    <%- include('particles/footer.ejs') %>